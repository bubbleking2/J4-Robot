void HangLight(int courseDirection)
{
    int processID;
    
    #ifdef TEST_LOG
      {
        LogEvent(931);
    }
    #endif
    
    TurnDegrees(-68);
    facingLeft = 1;
    
    TurnTowards(trafficLeft.x, trafficLeft.y);
    
    processID = start_process(DriveDistance(24., 35.));
    while((analog(CENTER_OPTOSENSOR) > 125 && analog(LEFT_OPTOSENSOR) > 125) && (analog(CENTER_OPTOSENSOR) > 125 && analog(RIGHT_OPTOSENSOR) > 125));
    kill_process(processID);
    motor(LEFT_MOTOR, 0);
    motor(RIGHT_MOTOR, 0);
    
    #ifdef TEST_LOG
      {
        LogEvent(772);
    }
    #endif
    
    processID = start_process(FollowLine());
    msleep(1500L);
    kill_process(processID);
    motor(LEFT_MOTOR, 0);
    motor(RIGHT_MOTOR, 0);
    
    #ifdef TEST_LOG
      {
        LogEvent(792);
    }
    #endif
    
    DriveDistance(12., -100.);
    TurnDegrees(68);
    facingLeft = 0;
    
    #ifdef TEST_LOG
      {
        LogEvent(930);
    }
    #endif
}

