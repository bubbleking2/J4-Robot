void FromTrafficToButton(int courseDirection)
{
    int process;
    
    #ifdef TEST_LOG
      {
        LogEvent(821);
    }
    #endif
    
    TurnDegrees(-90 * courseDirection);
    msleep(500L);
    process = start_process(GetTo(button.x, button.y, 1));
    msleep(5000L);
    kill_process(process);
    motor(LEFT_MOTOR, 0);
    motor(RIGHT_MOTOR, 0);
    
    #ifdef TEST_LOG
      {
        LogEvent(820);
    }
    #endif
}

