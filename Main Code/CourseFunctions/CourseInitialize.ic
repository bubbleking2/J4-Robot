int CourseInitializeKnob()
{
    #ifdef TEST_LOG
      {
        LogEvent(301);
    }
    #endif
    
    printf("\nSelect region with knob and press start");
    
    while(!start_button())
      {
        printf("\nRegion: %c", knob()/32+65);
        msleep(200L);
    }
    
    msleep(200L);
    
    #ifdef TEST_LOG
      {
        LogEvent(300);
    }
    #endif
    
    return knob()/32+65;
}

