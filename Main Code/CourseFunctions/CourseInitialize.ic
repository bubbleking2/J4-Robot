int CourseDirectionInitialize(int course)
{
    #ifdef TEST_LOG
      {
        LogEvent(311);
    }
    #endif
    
    if(course == 65 || course == 67 || course == 69 || course == 71)
      {
        #ifdef TEST_LOG
          {
            LogEvent(420);
        }
        #endif
        return -1;
    }
    else
      {
        #ifdef TEST_LOG
          {
            LogEvent(310);
        }
        #endif
        return 1;
    }
}

