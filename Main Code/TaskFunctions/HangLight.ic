void HangLight(int courseDirection)
{
    int processID;
    
    #ifdef TEST_LOG
      {
        LogEvent(811);
    }
    #endif
    
    if(trafficIsRight)
      {
        TurnDegrees(55);
        facingLeft = 0;
    }
    else
      {
        TurnDegrees(-55);
        facingLeft = 1;
    } 
    
    TurnTowards(trafficLeft.x, trafficLeft.y);                      
    
    RunWhileFor(DriveDistance(24., 35.), analog(CENTER_OPTOSENSOR) > FOLLOW_THRESHOLD && analog(LEFT_OPTOSENSOR) > FOLLOW_THRESHOLD && analog(RIGHT_OPTOSENSOR) > FOLLOW_THRESHOLD, 2000L);
    
    #ifdef TEST_LOG
      {
        LogEvent(612);
    }
    #endif
    
    RunFor(FollowLine(), 1500L);
    
    #ifdef TEST_LOG
      {
        LogEvent(672);
    }
    #endif
    
    DriveDistance(10., -100.);
    if(courseDirection == 1)
      {
        TurnDegrees(-58);
        facingLeft = 1;
    }
    else
      {
        TurnDegrees(58);
        facingLeft = 0;
    }
    
    #ifdef TEST_LOG
      {
        LogEvent(810);
    }
    #endif
}

