void TurnCrank(int courseDirection)
{
    int processID;
    
    #ifdef TEST_LOG
      {
        LogEvent(831);
    }
    #endif
    
    TurnAgainst(crankLine.x, crankLine.y);
    
    processID = start_process(DriveDistance(24., -40.));
    while(analog(CENTER_OPTOSENSOR) > FOLLOW_THRESHOLD && analog(LEFT_OPTOSENSOR) > FOLLOW_THRESHOLD && analog(RIGHT_OPTOSENSOR) > FOLLOW_THRESHOLD);
    kill_process(processID);
    ao();
    
    #ifdef TEST_LOG
      {
        LogEvent(612);
    }
    #endif
    
    processID = start_process(FollowLineBackwards());
    msleep(1500L);
    kill_process(processID);
    ao();
    
    #ifdef TEST_LOG
      {
        LogEvent(682);
    }
    #endif
    
    motor(CRANK, 100);
    msleep(750L);
    motor(CRANK, 0);
    
    #ifdef TEST_LOG
      {
        LogEvent(831);
    }
    #endif
}

