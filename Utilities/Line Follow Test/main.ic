/*-------------------------------------------------------------------------------------------------*/
//Line Follow Test
/*-------------------------------------------------------------------------------------------------*/

#use GlobalVariables\GlobalVariables.ic

#define FOLLOW_SPEED 50

/*-------------------------------------------------------------------------------------------------*/
//Function #1
/*-------------------------------------------------------------------------------------------------*/

void main()
{
    int stopPressed = 0;
    long endTime;
    
    printf("\nPress Start to begin.");
    start_press();
    
    while(!stopPressed)
      {
        motor(LEFT_MOTOR, FOLLOW_SPEED);
        motor(RIGHT_MOTOR, FOLLOW_SPEED);
        
        endTime = mseconds() + 10000L;
        while(mseconds() < endTime)
          {
            if(analog(CENTER_OPTOSENSOR) < 160)
              {
                while(analog(LEFT_OPTOSENSOR) > 160)
                  {
                    motor(LEFT_MOTOR, 0);
                }
                
                motor(LEFT_MOTOR, FOLLOW_SPEED);
                motor(RIGHT_MOTOR, FOLLOW_SPEED);
                
                while(analog(RIGHT_OPTOSENSOR) > 160)
                  {
                    motor(RIGHT_MOTOR, 0);
                }
            }
            
            motor(LEFT_MOTOR, FOLLOW_SPEED);
            motor(RIGHT_MOTOR, FOLLOW_SPEED);
        }
        motor(LEFT_MOTOR, 0);
        motor(RIGHT_MOTOR, 0);
        printf("\nPress Start to  test again.");
        while(!start_button() && !(stopPressed = stop_button()));
    }
}

