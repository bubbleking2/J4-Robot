//Motors Test

#define LEFT_MOTOR 1
#define RIGHT_MOTOR 3

void main()
{
    printf("\nPress Start to begin.");
    start_press();
    
    printf("\nSTOPPED");
    motor(LEFT_MOTOR, 0);
    motor(RIGHT_MOTOR, 0);
    sleep(2.);
    
    printf("\nFULL FORWARD");
    motor(LEFT_MOTOR, 100);
    motor(RIGHT_MOTOR, 100);
    sleep(2.);
    
    printf("\nSTOPPED");
    motor(LEFT_MOTOR, 0);
    motor(RIGHT_MOTOR, 0);
    sleep(2.);
    
    printf("\nFULL BACKWARD");
    motor(LEFT_MOTOR, -100);
    motor(RIGHT_MOTOR, -100);
    sleep(2.);
    
    printf("\nSTOPPED");
    motor(LEFT_MOTOR, 0);
    motor(RIGHT_MOTOR, 0);
}
